<aside id="sidebar">
  <div class="sidebar-inner c-overflow" tabindex="1" style="overflow: hidden; outline: none;">
    <div class="profile-menu toggled">
      <a href="/users">
          <div class="profile-pic">
            <div style="height:52px;"></div>
          </div>

          <div class="profile-info">
            <%= current_user.name%>
          </div>
      </a>
  </div>

    <ul class="main-menu">
      <li class="<%= "active" if controller.controller_name == "users"  and controller.action_name == "index"%>">
        <%= link_to users_path do%>
          <i class="zmdi zmdi-face zmdi-hc-fw "></i> My Profile
        <%end%>
      </li>

    <li class="<%= "active" if controller.controller_name == "surveys" and controller.action_name == "browse"%>">
      <%= link_to browse_surveys_path do%>
        <i class="zmdi zmdi-search zmdi-hc-fw "></i> Browse Surveys
      <%end%>
    </li>

    <li class="<%= "active" if controller.controller_name == "surveys" and controller.action_name == "index"%>">
      <%= link_to surveys_path do%>
        <i class="fa fa-book zmdi-hc-fw "></i> My Surveys
      <%end%>
    </li>
    </ul>
  </div>
</aside>
