<li style="list-style: none">
  <div class="field">
    <div class="form-group">
      <div class="fg-line">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Question Title' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.file_field :video %>
    </div>

    <div class="form-group">
      <%= f.file_field :image %>
    </div>

    <ul class="options">
      <%= f.fields_for :options do |builder| %>
        <%= render "option_fields", :f => builder %>
      <% end -%>
    </ul>
    <%= link_to_add_field "+", f, :options %>
    <br/ >
    <%= link_to_remove_field "X", f %>
  </div>
</li>
