<li style="list-style: none">
  <div class="field">
    <div class="col-md-4">
      <div class="form-group">
        <div class="fg-line">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Question Title' %>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="col-md-4 p-t-10">
        <%= f.file_field :video %>
      </div>

      <div class="col-md-4 p-t-10">
        <%= f.file_field :image %>
      </div>

      <div class="col-md-4 p-t-10">
        <div class="pull-right">
          <%= link_to_remove_field "Remove", f %>
        </div>
      </div>
    </div>


    <ul class="options">
      <%= f.fields_for :options do |builder| %>
        <%= render "option_fields", :f => builder %>
      <% end -%>
    </ul>
    <div class="col-md-12">
      <%= link_to_add_field "Add option", f, :options %>

    </div>
    <div class="col-md-12">
      <hr>
    </div>
  </div>
</li>
