<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="fg-line">
      <%= f.text_field :name, class: "form-control floatlabel", placeholder: "Name" %>
    </div>
  </div>

  <div class="form-group ">
    <div class="fg-line">
      <%= f.text_field :phone_number, class: "form-control floatlabel", placeholder: "Phone Number" %>
    </div>
  </div>

  <div class="form-group">
    <div class="fg-line">
      <label for="gender" class="label-floatlabel" style="color: rgb(41, 150, 204);">Gender</label>
      <select class="" name="user[gender]" id="user_gender">
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
    </div>
 </div>

  <div class="form-group ">
    <div class="fg-line">
      <%= f.text_field :birth_date, class: "form-control floatlabel", placeholder: "Birth Date" %>
    </div>
  </div>

  <div class="form-group  ">
    <div class="fg-line">
      <%= f.text_field :martial_status, class: "form-control floatlabel", placeholder: "Martial Status" %>
    </div>
  </div>


  <div class="form-group  ">
    <div class="fg-line">
      <%= f.text_field :description, class: "form-control floatlabel", placeholder: "Description" %>
    </div>
  </div>
<% end %>
<button class="btn btn-primary btn-lg" type="submit" form="edit_user_<%=current_user.id%>" value="Submit">Save</button>
